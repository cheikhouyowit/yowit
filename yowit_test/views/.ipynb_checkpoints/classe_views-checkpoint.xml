<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="classe_view_list">
      <field name="name">Classe Liste</field>
      <field name="model">classe.yowit</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nom_classe"/>
          <field name="code"/> 
        </tree>
      </field>
    </record>
      
        <!-- explicit form view definition -->

    <record model="ir.ui.view" id="classe_view_form">
      <field name="name">Classe Form</field>
      <field name="model">classe.yowit</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="nom_classe"/>
              <field name="code"/>  
            </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="classe_action_window">
      <field name="name">Domaine des Classes </field>
      <field name="res_model">classe.yowit</field>
      <field name="view_mode">tree,form</field>
    </record>



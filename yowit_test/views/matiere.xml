<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="matiere_view_list">
      <field name="name">Matiere Liste</field>
      <field name="model">matiere.yowit</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nom"/>
          <field name="code"/> 
          <field name="departement_id"/> 
            
        </tree>
      </field>
    </record>
      
        <!-- explicit form view definition -->

    <record model="ir.ui.view" id="matiere_view_form">
      <field name="name">Matiere Form</field>
      <field name="model">matiere.yowit</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="nom"/>
              <field name="code"/>  
              <field name="departement_id"/> 
            </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="matiere_action_window">
      <field name="name">Domaine des Matieres</field>
      <field name="res_model">matiere.yowit</field>
      <field name="view_mode">tree,form</field>
    </record>



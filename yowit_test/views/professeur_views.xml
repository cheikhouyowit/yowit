<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="professeur_view_list">
      <field name="name">Professeur Liste</field>
      <field name="model">professeur.yowit</field>
      <field name="arch" type="xml">
        <tree>
          <field name="prenom"/>
          <field name="nom"/>
          <field name="adresse"/>
          <field name="sexe"/>
          <field name="email"/>
          <field name="telephone"/>
          <field name="date_debut"/> 
          <field name="matiere_id"/>
          <field name="departement_id"/>   
        </tree>
      </field>
    </record>
      
        <!-- explicit form view definition -->

    <record model="ir.ui.view" id="professeur_view_form">
      <field name="name">Professeur Form</field>
      <field name="model">professeur.yowit</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="prenom"/>
              <field name="nom"/>
              <field name="adresse"/>
              <field name="sexe"/>
              <field name="email"/>
              <field name="telephone"/>
              <field name="date_debut"/>  
            </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="professeur_action_window">
      <field name="name">Domaine des Professeurs</field>
      <field name="res_model">professeur.yowit</field>
      <field name="view_mode">tree,form</field>
    </record>


